<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.Create_Budget_Activity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout_create_budget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/LLMainCreateBudget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/createBudgetLabel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:text="@string/create_budget"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/bgt_category"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="28"

                        android:gravity="center_vertical"
                        android:padding="@dimen/padding_8"
                        android:text="@string/category"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/transaction_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bgt_budget"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="18"


                        android:gravity="center_vertical"
                        android:padding="@dimen/padding_8"
                        android:text="@string/budget"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/transaction_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bgt_constant_date"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="12"

                        android:gravity="center_vertical"
                        android:padding="@dimen/padding_8"
                        android:text="@string/constant_date"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/transaction_text_size"
                        android:textStyle="bold"
                        app:autoSizeTextType="uniform" />

                    <TextView
                        android:id="@+id/bgt_store"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="28"

                        android:gravity="center_vertical"
                        android:padding="@dimen/padding_8"
                        android:text="@string/store"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/transaction_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bgt_charge_day"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="14"

                        android:gravity="center_vertical"
                        android:text="@string/charge_day"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/transaction_text_size"
                        android:textStyle="bold" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/budgets_rows"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:drawable/ic_input_add"
                        android:onClick="addInputRow" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toTopOf="@+id/adLL"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onCreateBudgetClicked"
            android:text="@string/create" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/adLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="@+id/refresh_layout_create_budget"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111"></com.google.android.gms.ads.AdView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
