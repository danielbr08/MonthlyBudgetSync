<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.BudgetActivity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout_budgets"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <TextView
                    android:id="@+id/BudgetTitleLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/budget"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:padding="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/LLBudget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/LLBudgetTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_style"
                        android:orientation="horizontal"
                        android:padding="6dp"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/categoryLabel"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:layout_weight="1"
                            android:text="@string/category"
                            android:textSize="@dimen/transaction_text_size"
                            android:textStyle="bold"
                            android:textAlignment="viewStart"
                            android:textColor="@android:color/black"
                            tools:ignore="RtlCompat" />

                        <TextView
                            android:id="@+id/budgetLabel"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:layout_weight="1"
                            android:text="@string/budget"
                            android:textSize="@dimen/transaction_text_size"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:gravity="center_horizontal"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/balanceLabel"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:layout_weight="1"
                            android:text="@string/balance"
                            android:textSize="@dimen/transaction_text_size"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textAlignment="viewEnd"
                            android:gravity="end" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/categories_rows"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" />

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_style"
                        android:padding="6dp"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/totalLabel"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:layout_weight="1"
                            android:text="@string/total"
                            android:textSize="@dimen/transaction_text_size"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/totalBudget"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:layout_weight="1"
                            android:text=""
                            android:textDirection="ltr"
                            android:textAlignment="center"
                            android:gravity="center_horizontal"
                            android:textSize="@dimen/transaction_text_size"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/totalBalance"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:layout_weight="1"
                            android:text=""
                            android:textDirection="ltr"
                            android:textAlignment="viewEnd"
                            android:gravity="end"
                            android:textSize="@dimen/transaction_text_size"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"></LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="@+id/refresh_layout_budgets"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111"></com.google.android.gms.ads.AdView>
    </LinearLayout>

</ScrollView>