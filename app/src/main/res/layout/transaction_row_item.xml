<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1"
    android:padding="10dp"
    android:background="@drawable/border_style"
    android:gravity="center_vertical"
    android:minHeight="50dp">

    <TextView
        android:id="@+id/trn_id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_2"
        android:text="@string/id"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/transaction_text_size"
        android:layout_weight="0.11"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/trn_category"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_2"
        android:text="@string/category"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/transaction_text_size"
        android:layout_weight="0.16"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/trn_store"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_2"
        android:text="@string/store"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/transaction_text_size"
        android:layout_weight="0.19"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/trn_charge_date"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_2"
        android:text="@string/charge_date"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/transaction_text_size"
        android:layout_weight="0.21"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/trn_payment_method"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_2"
        android:text="@string/payment_method"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/transaction_text_size"
        android:layout_weight="0.2"
        android:gravity="center_vertical"
        android:textAlignment="center"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/trn_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_2"
        android:text="@string/price"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/transaction_text_size"
        android:textDirection="ltr"
        android:textAlignment="viewEnd"
        android:layout_weight="0.13"
        android:gravity="center_vertical"
        tools:ignore="RtlCompat" />

</LinearLayout>